<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_glassmorphism"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Status Card with Glassmorphism -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_card"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="20dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/status_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status: Initialisiere..."
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/connection_quality_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¶"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:textColor="@color/neon_cyan"/>

                    <ProgressBar
                        android:id="@+id/reconnect_progress"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:indeterminateTint="@color/neon_cyan" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connect_button"
                    style="@style/Widget.Glass.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”„ Manueller Reconnect"
                    android:textSize="15sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Auth Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_button"
                style="@style/Widget.Glass.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ” Login"
                android:layout_marginEnd="8dp"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                style="@style/Widget.Glass.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âœ¨ Register"
                android:layout_marginStart="8dp"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Admin/Supervisor Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/admin_button"
                style="@style/Widget.Glass.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ”§ Admin"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/supervisor_button"
                style="@style/Widget.Glass.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ‘ï¸ Supervisor"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Visitors List Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/glass_card"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/glass_card">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/glass_card_dark"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž"
                        android:textSize="22sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wartende Besucher"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/visitor_count_badge"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/glass_button_primary"
                        android:gravity="center"
                        android:paddingTop="4dp" />

                </LinearLayout>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/live_visitors_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/visitor_list_item_template" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Active Call Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/active_call_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_card"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/active_call_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aktiver Anruf..."
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Chat Messages -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/glass_card_dark"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/chat_messages_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp" />

                </ScrollView>

                <!-- Chat Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/chat_input"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Nachricht..."
                        android:textColorHint="@color/text_muted"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/glass_card_dark"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chat_send_button"
                        style="@style/Widget.Glass.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="ðŸ“¤"
                        android:textSize="18sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                </LinearLayout>

                <!-- End Call Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/call_end_button"
                    style="@style/Widget.Glass.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“µ Anruf beenden"
                    android:backgroundTint="#EF4444"
                    android:textSize="16sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
