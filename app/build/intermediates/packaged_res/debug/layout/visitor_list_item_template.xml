<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#2E2E2E"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- 1. Avatar Bild -->
    <ImageView
        android:id="@+id/visitor_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:background="#3A3A3A"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="Avatar" />

    <!-- 2. Text Bereich (Name & Domain) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/visitor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unbekannter Besucher"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visitor_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lade Domain..."
            android:textSize="12sp"
            android:textColor="#BBBBBB" />
    </LinearLayout>

    <!-- 3. Anruf Button -->
    <Button
        android:id="@+id/call_visitor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANRUFEN"
        android:backgroundTint="#00BCD4"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:minHeight="40dp" />

    <!-- 4. Optional: Chat Button (Standardmäßig versteckt) -->
    <Button
        android:id="@+id/chat_visitor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAT"
        android:backgroundTint="#8BC34A"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:minHeight="40dp" />

</LinearLayout>
