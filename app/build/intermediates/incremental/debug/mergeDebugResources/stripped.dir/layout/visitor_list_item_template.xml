<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#2E2E2E"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#40FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 1. Avatar Bild mit modernem Design -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#3A3A3A"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/visitor_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/sym_def_app_icon"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="Avatar" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 2. Text Bereich (Name & Domain) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visitor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unbekannter Besucher"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/visitor_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lade Domain..."
                    android:textSize="13sp"
                    android:textColor="#BBBBBB"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- 3. Anruf Button mit modernem Design -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/call_visitor_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="ðŸ“ž ANRUFEN"
            app:backgroundTint="#00BCD4"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="10dp"
            app:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp" />

        <!-- 4. Optional: Chat Button (StandardmÃ¤ÃŸig versteckt) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_visitor_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="ðŸ’¬"
            app:backgroundTint="#8BC34A"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:cornerRadius="10dp"
            app:elevation="4dp"
            android:minWidth="48dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
